<main>
    {{#if err.length}}
    <div class="max-w-md mx-auto my-10 alertas">
        {{#each err}}
            <p class="bg-red-600 text-white uppercase text-xs text-center p-2 mb-1 font-bold rounded-md">{{this}}</p>
        {{/each}}
    </div>
    {{/if}}
    {{#if errores.length}}
    <div class="max-w-md mx-auto my-10 alertas">
        {{#each errores}}
            <p class="bg-red-600 text-white uppercase text-xs text-center p-2 mb-1 font-bold rounded-md">{{this.msg}}</p>
        {{/each}}
    </div>
    {{/if}}

    {{#if msg.length}}
    <div class="max-w-md mx-auto my-10 alertas">
        {{#each msg}}
            <p class="bg-green-600 text-white uppercase text-xs text-center p-2 mb-1 font-bold rounded-md">{{this}}</p>
        {{/each}}
    </div>
    {{/if}}
    
    <h1 class="text-4xl text-center font-semibold mt-10">{{nombrePagina}}</h1>
    <div class="mt-5 mx-auto max-w-md my-5">
        <div class="bg-white py-3 px-4.shadow">
            <form method="POST" class="space-y-5">
                <div>
                    <label class="block text-sm text-gray-800 mb-2" for="name">Ingresa tu nombre completo</label>
                    <input type="text" id="name" name="name" placeholder="Ej. Juan Perez" class="w-full px-3 py-2 border border-gray-300 rounded-md placeholder-gray-400">
                </div>
                <div>
                    <label class="block text-sm text-gray-800 mb-2" for="name">Ingresa tu email</label>
                    <input type="email" id="email" name="email" placeholder="Ej. correo@corre.com" class="w-full px-3 py-2 border border-gray-300 rounded-md placeholder-gray-400">
                </div>
                <div>
                    <label class="block text-sm text-gray-800 mb-2" for="name">Ingresa tu edad</label>
                    <input type="number" id="edad" name="edad" placeholder="Ej. 24" class="w-full px-3 py-2 border border-gray-300 rounded-md placeholder-gray-400">
                </div>
                <div>
                    <label class="block text-sm text-gray-800 mb-2" for="name">Ingresa una contrase√±a</label>
                    <input type="password" id="password" name="password" class="w-full px-3 py-2 border border-gray-300 rounded-md placeholder-gray-400">
                </div>
                <div>
                    <label class="block text-sm text-gray-800 mb-2" for="rol"> Rol</label>
                    <select id="rol" name="rol" class="text-sm text-gray-800 w-full px-3 py-2 border border-gray-300 rounded-md placeholder-gray-400">
                        <option value="user" selected >Usario</option>
                        <option value="admin">Administrador</option>
                    </select>
                </div>
                <div class="flex items-left">
                    <p class="text-gray-500 text-xs mr-2">Ya tenes una cuenta?</p>
                    <a href="/api/users/login" class="text-gray-600 text-xs underline">Inicia sesion</a>
                </div>
                <input type="submit" value="Registrarme" class="w-full bg-indigo-800 text-red-100 hover:bg-indigo-700 text-white rounded-md py-2 px-5 cursor-pointer">
            </form>
        </div>
    </div>
</main>